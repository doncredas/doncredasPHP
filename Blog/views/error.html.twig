{% extends "layout.html.twig" %}

{% block title %}Error!{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-7">
            <img class="img-responsive pull-right" src="{{ app.request.basepath }}/img/404.jpg" alt="Error ghost"/>
        </div>
        <div class="col-md-5">
            <h1>Whoops...<br>
                <p style="font-size: 100px; margin-top: 20px;">{{ code }}</p>
                <small>{{ message }}</small></h1>
        </div>
    </div>
{% endblock %}