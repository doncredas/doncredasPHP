{% extends 'layout.html.twig' %}
{% block title %} {{ parent() ~ article.titre }}  {% endblock %}
{% block content %}
    <article>
        <h2> {{ article.titre }} </h2>
        <p> {{ article.contenu }}</p>
        <h3>Comments</h3>
        {% for comment in comments %}
            <strong>{{ comment.author }}</strong> said : {{ comment.content }}<br>
        {% else %}
            No comments yet.
        {% endfor %}
    </article>
{% endblock %}